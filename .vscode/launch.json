{
    "configurations": [
        {
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "module": "src",
            "justMyCode": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Module + Build Webpage",
            "type": "python",
            "request": "launch",
            "module": "src",
            "justMyCode": true,
            "console": "integratedTerminal",
            "preLaunchTask": "npm: build - src/gui/vue"
        },
        {
            "name": "NPM: Build Webpage",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run-script", "build"],
            "preLaunchTask": "npm: build - src/gui/vue",
            "skipFiles": ["<node_internals>/**"],
            "cwd": "${workspaceFolder}/src/gui/vue"
        },
        {
            "name": "NPM: Host Webpage",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run-script", "dev"],
            "preLaunchTask": "npm: dev - src/gui/vue",
            "skipFiles": ["<node_internals>/**"],
            "cwd": "${workspaceFolder}/src/gui/vue",
        },
    ],
    "compounds": [
        {
            "name": "Build and Run",
            "configurations": ["NPM: Build Webpage", "Python: Module + Build Webpage"]
        },
        {
            "name": "Build and Host",
            "configurations": ["NPM: Host Webpage", "Python: Module"]
        }
    ],
    "tasks": [
        {
			"type": "npm",
			"script": "build",
			"path": "src/gui/vue",
			"group": "build",
			"problemMatcher": [],
			"label": "npm: build - src/gui/vue",
			"detail": "vite build"
        },
        {
            "type": "npm",
            "script": "dev",
            "path": "src/gui/vue",
            "problemMatcher": [],
            "label": "npm: dev - src/gui/vue",
            "detail": "vite dev",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}